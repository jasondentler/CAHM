@model NewGameModel
@{
    ViewBag.Title = "New Game";
    Bundles.Reference("~/scripts/NewGame/");
}

<ul data-bind="foreach: PendingGames, visible: PendingGames().length > 0" id="pendingGames">
    <li data-bind="attr: {id: Id}, css: {selected: Id() == $root.SelectedGame()}" style="text-align: center">
        <input type="radio" name="@Html.NameFor(m=>m.Id)" data-bind="value: Id, checked: $root.SelectedGame, attr: {id: '@Html.IdFor(m => m.Id)' + $index()}" />
        <label data-bind="foreach: GravatarHashes, attr: {for: '@Html.IdFor(m => m.Id)' + $index()}" class="right">
            <img data-bind="attr: {src: 'http://www.gravatar.com/avatar/' + $data + '.jpg?r=pg&s=50&d=retro'}" src="" alt="" class="gravatar"/>
        </label>
    </li>
</ul>
