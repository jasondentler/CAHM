@model NewPlayerModel
@{
    ViewBag.Title = "New Player";
    Bundles.Reference("~/scripts/PlayerSetup/");
}


@using (Html.BeginForm(MVC.Setup.Actions.NewPlayer((NewPlayerModel) null), FormMethod.Post, new {id = "playerSetup"}))
{
    @Html.HiddenFor(m => m.Location.Latitude)
    @Html.HiddenFor(m => m.Location.Longitude)
    <div class="input-prepend input-append" id="emailContainer">
        <span class="add-on"><i class="icon-envelope"></i></span>
        @Html.TextBoxFor(m => m.Email, new {id = "email", placeholder = "Email address"})
        <img src="http://www.gravatar.com/avatar/00000000000000000000000000000000?s=28&r=pg&d=mm" alt="You" class="gravatar add-on"/>
    </div>
    <div class="input-prepend">
        <span class="add-on"><i class="icon-key"></i></span>
        @Html.PasswordFor(m => m.Password, new {placeholder = "Enter Password"})
    </div>
    <div class="input-prepend">
        <span class="add-on"><i class="icon-key"></i></span>
        @Html.PasswordFor(m => m.ConfirmPassword, new {placeholder = "Confirm Password"})
    </div>
    <button class="btn"><i class="icon-signin"></i> Register</button>
}