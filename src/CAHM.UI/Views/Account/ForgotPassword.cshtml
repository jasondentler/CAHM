@model ForgotPasswordModel
@{
    ViewBag.Title = "Forgot Password";
    Bundles.Reference("~/scripts/Account/");
}
<p>
    <a href="@Url.Action(MVC.Account.Login())">Nevermind. I remember my password.</a>
</p>
<p>
    <h3>Reset Password</h3>
    <p>
        Enter the email associated with your account. We'll send you a link to reset your password.
    </p>
    @Html.ValidationSummary()
    @using (Html.BeginForm(MVC.Account.ForgotPassword((ForgotPasswordModel) null), FormMethod.Post, new {id = "playerSetup"}))
    {
        <div class="input-prepend input-append" id="emailContainer">
            <span class="add-on"><i class="icon-envelope"></i></span>
            @Html.TextBoxFor(m => m.Email, new {id = "email", placeholder = "Email address"})
            <img src="http://www.gravatar.com/avatar/00000000000000000000000000000000?s=28&r=pg&d=mm" alt="You" class="gravatar add-on"/>
            @Html.ValidationMessageFor(m=> m.Email, "*")
        </div>
        <button class="btn"><i class="icon-key"></i> Next</button>
    }
</p>