@model Player
@{
    ViewBag.Title = "New Player";
    Bundles.Reference("~/scripts/PlayerSetup/");
}


@using (Html.BeginForm(MVC.Player.Actions.Setup((Player) null), FormMethod.Post, new {id="playerSetup"}))
{
    <div class="input-prepend" id="emailContainer">
        <span class="add-on"><i class="icon-envelope"></i></span>
        @Html.TextBoxFor(m => m.Email, new {id = "email", placeholder = "Email address"})
        <img src="http://www.gravatar.com/avatar/00000000000000000000000000000000?s=30&r=pg&d=mm" alt="You" class="gravatar"/>
    </div><br/>

    <button class="btn"><i class="icon-signin"></i> Sign In</button>
}